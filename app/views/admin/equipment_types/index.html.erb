<h1><%= t('equipment_type.index.title') %></h1>

<table class="normal_table">
  <tr>
    <th><%= t('equipment_type.model.name') %></th>
  </tr>

  <% @equipment_types.each do |equipment_type| %>
    <tr>
      <td><%=h equipment_type.name %></td>
      <td><%= link_to image_tag("icons/show.png", :size => "24x24"), [:admin, equipment_type], :title => t('general.show') %></td>
      <td><%= link_to image_tag("icons/edit.png", :size => "24x24"), edit_admin_equipment_type_path(equipment_type), :title => t('general.edit') %></td>
      <td><%= link_to image_tag("icons/destroy.png", :size => "24x24"), [:admin, equipment_type], :confirm => t("general.confirmation"), :method => :delete, :title => t('general.destroy')  %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to t('general.new'), new_admin_equipment_type_path %>