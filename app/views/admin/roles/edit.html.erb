<h1><%= t('roles.edit_role') %></h1>

<% form_for([:admin, @role]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name, t('roles.fields.name') %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit t('general.submit') %>
  </p>
<% end %>

<hr />


<%= render :partial => "permissions" %>


<hr />
<% if current_user.has_perm?("roles_roles_can_show") %>
  <%= link_to 'Show', [:admin, @role] %> |
<% end %>
<%= link_to 'Back', admin_roles_path %>