<h1><%= t('location.index.title') %></h1>

<table class="normal_table">
  <tr>
    <th><%= t('location.model.name') %></th>
  </tr>

  <% @equipment_locations.each do |equipment_location| %>
    <tr>
      <td><%=h equipment_location.name %></td>
      <td><%= link_to image_tag("icons/show.png", :size => "24x24"), [:admin, equipment_location], :title => t('general.show') %></td>
      <td><%= link_to image_tag("icons/edit.png", :size => "24x24"), edit_admin_equipment_location_path(equipment_location), :title => t('general.edit') %></td>
      <td><%= link_to image_tag("icons/destroy.png", :size => "24x24"), [:admin, equipment_location], :confirm => t("general.confirmation"), :method => :delete, :title => t('general.destroy')  %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to t('general.new'), new_admin_equipment_location_path %>