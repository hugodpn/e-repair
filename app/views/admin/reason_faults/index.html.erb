<h1>Listing reason faults</h1>

<table class="normal_table">
  <tr>
    <th>Name</th>
  </tr>

<% @reason_faults.each do |reason_fault| %>
  <tr>
    <td><%=h reason_fault.name %></td>
    <td><%= link_to 'Show', [:admin, reason_fault] %></td>
    <td><%= link_to 'Edit', edit_admin_reason_fault_path(reason_fault) %></td>
    <td><%= link_to 'Destroy', [:admin, reason_fault], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New reason fault', new_admin_reason_fault_path %>