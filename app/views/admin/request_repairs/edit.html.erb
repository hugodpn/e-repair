<h1>Editing request repair</h1>

<% form_for([:admin, @request_repair]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </p>
  <p>
    <%= f.label :department_id %><br />
    <%= f.select("department_id", Department.all.collect {|d| [ d.name, d.id ] }, { :include_blank => false }) %>
  </p>
  <p>
    <%= f.label :reason %><br />
    <%= f.text_field :reason %>
  </p>
  <p>
    <%= f.label :solution %><br />
    <%= f.text_area :solution, :size => "40x4" %>
  </p>
  <p>
    <label>Repaired</label><br />
    <%= check_box_tag 'repaired', 'true', (@request_repair.repair_id == nil) ? false : true %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', [:admin, @request_repair] %> |
<%= link_to 'Back', admin_request_repairs_path %>